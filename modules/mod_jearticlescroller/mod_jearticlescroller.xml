<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>Je Article Scroller</name>
	<author>Hardik Mistry</author>
	<creationDate>21-09-2011</creationDate>
	<copyright>Copyright (C) 2009 - 2010 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.joomlaextensions.co.in</license>
	<authorEmail>emailtohardik@gmail.com</authorEmail>
	<authorUrl>www.joomlaextensions.co.in</authorUrl>
	<version>1.0</version>
	<description> Je Article Scroller </description>
	
	<files>
		<filename module="mod_jearticlescroller">mod_jearticlescroller.php</filename>
		<folder>tmpl</folder>
		<folder>elements</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
	</files>
	
	<config>
	<fields name="params" addfieldpath="/modules/mod_jearticlescroller/elements">
		<fieldset name="advanced">
		<field name="count" type="text" default="5" label="Article Display Limit" description="The number of items to display (default 5)" />
		<!--<param name="number" type="text" default="5" size="9" label="Number" description="The number characters of Intro Articles to display (the default is 40)" />-->
		<field name="number_intro" type="text" default="40" size="9" label="Number Characters" description="The number characters of Intro Articles to display (the default is 40)" />
		<field name="show_image" type="list" default="1" label="Show Image" description="Show/Hide Image">
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</field>
		<field name="width" type="text" default="140" size="9" label="Width" description="The width of image (the default is 140)" />
		<field name="height" type="text" default="80" size="9" label="Height" description="The height of image (the default is 80)" />
		<!--<field name="show_jquery" type="list" default="" label="Load Jquery library" description="Load Jquery">
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</field>-->
		<field name="ordering" type="list" default="c_dsc" label="Ordering" description="Ordering options">
			<option value="c_dsc">Recently Added First</option>
			<option value="m_dsc">Recently Modified First</option>
	  	</field>
		<field name="user_id" type="list" default="0" label="Authors" description="A filter for the authors">
			<option value="0">Anyone</option>
			<option value="by_me">Added or modified by me</option>
			<option value="not_me">Not added or modified by me</option>
	  	</field>
		<field name="@spacer" type="spacer" default="" label="" description="" />
		<field name="show_front" type="radio" default="1" label="Frontpage Items" description="Frontpage Items">
			<option value="1">show</option>
			<option value="0">hide</option>
		</field>
		<!--<field name="secid" type="jearticlesection" default="" label="Section ID" description="Section ID" />-->
		<field name="catid" type="jearticlecategory" default="" label="Category ID" description="Category ID" />
		<field name="@spacer" type="spacer" default="" label="" description="" />
		
		<field name="autoscroller" type="radio" default="1" label="Auto Scroller" description="Auto Scroller">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</field>
		
		<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="fieldMODULECLASSSUFFIX" />
		</fieldset>
	</fields>
	
	<fields group="advanced">
	<fieldset>
		<field name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</field>
		<field name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
		</fieldset>
	</fields>
	 </config>
</extension>
