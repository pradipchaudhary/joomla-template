<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
	<name>Continuous rss scrolling</name>
	<author>Gopi Ramasamy</author>
	<creationDate>May 2017</creationDate>
	<copyright>(C) 2010 - 2017 www.gopiplus.com, LLC. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPLv2</license>
	<authorEmail>gopiplus@gmail.com</authorEmail>
	<authorUrl>http://www.gopiplus.com/extensions/2011/06/continuous-rss-scrolling-joomla-module/</authorUrl>
	<version>4.7</version>
	<description>CRS_DESC</description>
	<languages>
		<language tag="en-GB">language/en-GB.mod_continuous_rss_scrolling.ini</language>
		<language tag="en-US">language/en-US.mod_continuous_rss_scrolling.ini</language>
	</languages>
	<files>
		<filename module="mod_continuous_rss_scrolling">mod_continuous_rss_scrolling.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>		
		<filename>mod_continuous_rss_scrolling.js</filename>	
		<filename>mod_continuous_rss_scrolling.xml</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="crs_record_height" type="text" default="50" label="CRS_HEIGHT" description="CRS_HEIGHT_DESC" />
				<field name="crs_display_count" type="text" default="5" label="CRS_COUNT" description="CRS_COUNT_DESC" />
				<field name="crs_display_width" type="text" default="200" label="CRS_WIDTH" description="CRS_WIDTH_DESC" />
				<field name="crs_rss_url" type="text" size="50" default="http://www.gopiplus.com/work/feed/" label="CRS_RSSURL" description="CRS_RSSURL_DESC" />
				<field name="crs_cache" type="list" default="false" label="CRS_CACHE" description="CRS_CACHE_DESC">
					<option value="true">CRS_YES</option>
					<option value="false">CRS_NO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>